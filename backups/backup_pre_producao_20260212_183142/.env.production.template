# Database Configuration
POSTGRES_USER=petshop_prod
POSTGRES_PASSWORD=GERAR_SENHA_FORTE_AQUI_MIN_32_CHARS
POSTGRES_DB=petshop_production_db
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Security - CRITICAL: Generate new values before deploying!
# Para gerar: python -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_SECRET_KEY=GERAR_TOKEN_AQUI_USE_PYTHON_SECRETS_URLSAFE_64

# Para gerar: python -c "import secrets; print(secrets.token_urlsafe(32))"
ADMIN_TOKEN=GERAR_TOKEN_AQUI_USE_PYTHON_SECRETS_URLSAFE_32

# Environment
ENVIRONMENT=production
DEBUG=false

# CORS - Adicione apenas seus domínios reais
# Exemplo: https://app.seupetshop.com,https://www.seupetshop.com
ALLOWED_ORIGINS=https://seu-dominio-aqui.com
FRONTEND_URL=https://seu-dominio-aqui.com

# API Keys - Obtenha em produção
GOOGLE_MAPS_API_KEY=
OPENAI_API_KEY=
BLING_CLIENT_ID=
BLING_CLIENT_SECRET=

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO
SENTRY_DSN=  # Opcional: adicione Sentry para monitoramento

# Backup
BACKUP_RETENTION_DAYS=30
BACKUP_ENABLED=true

