# =====================================================
# PetShop ERP - Environment Configuration
# =====================================================
# Copy this file to .env and adjust the values
# NEVER commit the real .env file
# =====================================================


# -------------------------------
# Core application
# -------------------------------

# Application name (informational)
SYSTEM_NAME=Pet Shop Pro

# Environment: development | staging | production
ENVIRONMENT=development

# Debug mode (MUST be false in production)
DEBUG=false


# -------------------------------
# Database (REQUIRED)
# -------------------------------
# PostgreSQL connection string
# Example:
# postgresql://user:password@localhost:5432/petshop
DATABASE_URL=postgresql://USER:PASSWORD@HOST:PORT/DATABASE


# -------------------------------
# Security / Authentication (REQUIRED)
# -------------------------------
# JWT secret key (REQUIRED)
# MUST be a long random string in production
JWT_SECRET_KEY=CHANGE_ME


# -------------------------------
# External Integrations (OPTIONAL)
# -------------------------------

# Google Maps API key (required only if using delivery/route features)
GOOGLE_MAPS_API_KEY=


# -------------------------------
# CORS
# -------------------------------
# Comma-separated list of allowed origins
# Use * only in development
ALLOWED_ORIGINS=http://localhost:3000


# -------------------------------
# Notes
# -------------------------------
# - DATABASE_URL and JWT_SECRET_KEY are REQUIRED
# - DEBUG=true is FORBIDDEN in production
# - Missing required values will prevent app startup
# =====================================================
